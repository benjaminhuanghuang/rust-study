{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rust: cargo build",
      "type": "cargo",
      "command": "build",
      "group": "build",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "cargo fmt && run",
      "type": "shell",
      "command": "~/.cargo/bin/cargo fmt && ~/.cargo/bin/cargo run",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}